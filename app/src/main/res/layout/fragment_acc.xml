<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headerNavAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_nav"
            app:backgroundTint="@null">

            <TextView
                android:id="@+id/title_home_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="Account"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_open_notification_home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_icon_notification"
                android:contentDescription="Notification"
                android:drawableTop="@drawable/baseline_notifications_24"
                app:backgroundTint="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerNavAccount">

            <LinearLayout
                android:id="@+id/general_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:gravity="start|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENERAL"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container_holder_get_data_acc_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/general_acc"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_holder_general_setting"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/detail_general_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_general"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_account_circle_24"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="General"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_detail_general"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_icon_notification"
                        android:contentDescription="Notification"
                        android:drawableTop="@drawable/baseline_arrow_next_ios_new_24"
                        android:padding="4dp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_setting_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_general_acc"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_setting"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_settings_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setting"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_detail_setting"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_icon_notification"
                        android:contentDescription="Notification"
                        android:drawableTop="@drawable/baseline_arrow_next_ios_new_24"
                        android:padding="4dp"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/AboutUs_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_holder_get_data_acc_general"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT US"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container_holder_get_data_acc_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AboutUs_acc"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_holder_share_ab_sup"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/detail_share_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_share"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_share_24"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share with Friends"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_detail_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_icon_notification"
                        android:contentDescription="Notification"
                        android:drawableTop="@drawable/baseline_arrow_next_ios_new_24"
                        android:padding="4dp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_about_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_share_acc"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_about"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_groups_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_detail_about"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_icon_notification"
                        android:contentDescription="Notification"
                        android:drawableTop="@drawable/baseline_arrow_next_ios_new_24"
                        android:padding="4dp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_support_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_about_acc"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_support"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_help_outline_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_detail_support"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_icon_notification"
                        android:contentDescription="Notification"
                        android:drawableTop="@drawable/baseline_arrow_next_ios_new_24"
                        android:padding="4dp"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_holder_get_data_acc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_holder_get_data_acc_about_us"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_holder_logout_btn"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/signoutt_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/icon_logout"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_logout_24" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>