<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="selector_icon">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="circularShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_icon_notification</item>
        <item name="colorPrimary">#808080</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item> <!-- Set your desired width -->
        <item name="android:layout_height">300dp</item>
        <item name="textFillColor">@color/black</item>
        <item name="borderRound">12dp</item>
        <item name="android:background">@drawable/bg_select_icon</item> <!-- Set your desired border/background -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>
</resources>