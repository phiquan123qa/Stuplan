<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_icon_color_background"
    android:elevation="4dp">

    <TextView
        android:id="@+id/move_to_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Move to Doing"
        android:drawableStart="@drawable/baseline_work_outline_24"
        android:gravity="center"
        android:clickable="true"/>
    <TextView
        android:id="@+id/move_to_doing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Move to Doing"
        android:drawableStart="@drawable/baseline_work_outline_24"
        android:gravity="center"
        android:clickable="true"/>

    <TextView
        android:id="@+id/move_to_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Move to Done"
        android:drawableStart="@drawable/baseline_done_outline_24"
        android:clickable="true"/>

    <TextView
        android:id="@+id/move_to_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:drawableStart="@drawable/baseline_clear_24"
        android:text="Delete"
        android:clickable="true"/>
</LinearLayout>