<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_simple">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_issue_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DODODODODODO"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/time_issue_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8C000000"
                    android:text="DAYYYYYYYYY"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/icon_issue_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/kotlin_16_svgrepo_com"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>